---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Master the Art of Snare Drumming with The Rudimental Blueprint" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Font imports -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		
		<!-- Global Tailwind CSS -->
		<style>
			@import '/src/styles/global.css';
		</style>
	</head>
	
	<body class="bg-gradient-to-br from-black via-gray-900 to-black text-white min-h-screen">
		<Header />
		
		<main class="main-content">
			<slot />
		</main>

		<Footer />

		<!-- Background Elements -->
		<div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
			<!-- Subtle animated background -->
			<div class="absolute top-1/4 -left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl animate-pulse"></div>
			<div class="absolute bottom-1/4 -right-1/4 w-96 h-96 bg-blue-600/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
		</div>

		<style is:global>
			/* CSS RESET - Eliminate all default spacing */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: 'Inter', system-ui, sans-serif;
				scroll-behavior: smooth;
				margin: 0;
				padding: 0;
			}

			body {
				background: #000000;
				color: #ffffff;
				line-height: 1.6;
				overflow-x: hidden;
				margin: 0;
				padding: 0;
			}

			/* Header Styles - Two Distinct Types */
			
			/* Style 1: Silvery Gradient (slightly thicker than before) */
			.header-style-silver,
			h1.header-style-silver,
			span.header-style-silver {
				font-size: clamp(2rem, 6vw, 3.5rem) !important;
				font-weight: 300 !important; /* Slightly thicker than 200 */
				line-height: 1.1 !important;
				letter-spacing: -0.03em !important;
				background: linear-gradient(135deg, #ffffff 0%, #888888 100%) !important;
				-webkit-background-clip: text !important;
				-webkit-text-fill-color: transparent !important;
				background-clip: text !important;
				margin: 0 !important;
				overflow: visible !important;
				color: transparent !important;
			}

			/* Style 2: Blue Gradient (thicker, #8cb0de bottom left to white top right) */
			.header-style-blue,
			h1.header-style-blue, 
			span.header-style-blue {
				font-size: clamp(1.8rem, 5vw, 3.2rem) !important;
				font-weight: 700 !important; /* Much thicker/bolder */
				line-height: 1.2 !important; /* Restored to prevent cut-off */
				letter-spacing: -0.04em !important;
				background: linear-gradient(135deg, #8cb0de 0%, #ffffff 100%) !important;
				-webkit-background-clip: text !important;
				-webkit-text-fill-color: transparent !important;
				background-clip: text !important;
				margin: 0 !important;
				margin-top: -0.5rem !important; /* Negative margin to bring closer to line above */
				overflow: visible !important;
				color: transparent !important;
			}

			/* Extra specificity for hero title main */
			.hero-title-main.header-style-blue {
				font-size: clamp(2rem, 6vw, 3.8rem) !important;
				font-weight: 800 !important;
				line-height: 1.2 !important; /* Restored to prevent cut-off */
				margin-top: -0.5rem !important; /* Negative margin to bring closer to line above */
			}

			/* Responsive adjustments for smaller screens */
			@media (max-width: 768px) {
				.header-style-silver,
				h1.header-style-silver,
				span.header-style-silver {
					font-weight: 400 !important; /* Slightly bolder on mobile for readability */
				}
				
				.header-style-blue,
				h1.header-style-blue,
				span.header-style-blue {
					font-weight: 800 !important; /* Even bolder on mobile */
				}
			}

			/* Global Button Styles - Beautiful Gradient Button */
			.btn-primary {
				padding: 16px 32px;
				font-size: 18px;
				font-weight: 600;
				color: #333;
				border: none;
				border-radius: 12px;
				cursor: pointer;
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, #8cb0de 0%, #ffffff 100%);
				box-shadow: 0 4px 15px rgba(140, 176, 222, 0.3);
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				text-decoration: none;
				display: inline-block;
				text-align: center;
				letter-spacing: 0.5px;
				outline: none;
			}

			.btn-primary::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, #8cb0de 0%, #ffffff 100%);
				opacity: 0;
				transition: opacity 0.3s ease;
				z-index: -1;
			}

			.btn-primary:hover {
				transform: translateY(-2px) scale(1.02);
				box-shadow: 
					0 8px 25px rgba(140, 176, 222, 0.4),
					0 0 20px rgba(140, 176, 222, 0.3),
					inset 0 1px 0 rgba(255, 255, 255, 0.6);
				background: linear-gradient(135deg, #9bc1e8 0%, #ffffff 100%);
			}

			.btn-primary:hover::before {
				opacity: 1;
			}

			.btn-primary:active {
				transform: translateY(0) scale(0.98);
				transition: all 0.1s ease;
			}

			/* Subtle shimmer effect */
			.btn-primary::after {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					90deg, 
					transparent, 
					rgba(255, 255, 255, 0.4), 
					transparent
				);
				transition: left 0.6s ease;
			}

			.btn-primary:hover::after {
				left: 100%;
			}

			.btn-primary span {
				position: relative;
				z-index: 2;
			}

			.btn-primary:focus {
				outline: none;
				box-shadow: 
					0 4px 15px rgba(140, 176, 222, 0.3),
					0 0 0 3px rgba(140, 176, 222, 0.4);
			}

			.btn-secondary {
				position: relative;
				background: transparent;
				border: 2px solid rgba(255, 255, 255, 0.3);
				color: #ffffff;
				padding: 1rem 2rem;
				border-radius: 10px;
				font-weight: 600;
				font-size: 1rem;
				cursor: pointer;
				overflow: hidden;
				transition: all 0.3s ease;
				text-decoration: none;
				display: inline-flex;
				align-items: center;
				gap: 0.75rem;
				outline: none;
			}

			.btn-secondary span {
				position: relative;
				z-index: 2;
				transition: color 0.3s ease;
			}

			.btn-secondary .btn-bg {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(255, 255, 255, 0.1);
				transform: scaleX(0);
				transform-origin: left;
				transition: transform 0.4s ease;
				z-index: 1;
			}

			.btn-secondary svg {
				position: relative;
				z-index: 2;
			}

			.btn-secondary:hover {
				border-color: rgba(255, 255, 255, 0.5);
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
			}

			.btn-secondary:hover .btn-bg {
				transform: scaleX(1);
			}

			.btn-secondary:active {
				transform: translateY(0);
			}

			.btn-secondary:focus {
				border-color: rgba(255, 255, 255, 0.4);
				outline: none;
			}

			/* Enhanced scrollbar styling */
			::-webkit-scrollbar {
				width: 8px;
			}

			::-webkit-scrollbar-track {
				background: #111111;
			}

			::-webkit-scrollbar-thumb {
				background: linear-gradient(135deg, #333333, #222222);
				border-radius: 4px;
			}

			::-webkit-scrollbar-thumb:hover {
				background: linear-gradient(135deg, #444444, #333333);
			}

			/* Remove focus flash from all interactive elements */
			button:focus,
			a:focus,
			input:focus {
				outline: none !important;
				box-shadow: none !important;
			}

			/* Global utility classes */
			.text-gradient {
				background: linear-gradient(135deg, #ffffff 0%, #888888 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			/* Smooth animations */
			@keyframes fadeIn {
				from { opacity: 0; }
				to { opacity: 1; }
			}

			@keyframes slideUp {
				from { 
					opacity: 0; 
					transform: translateY(20px); 
				}
				to { 
					opacity: 1; 
					transform: translateY(0); 
				}
			}

			.animate-fade-in {
				animation: fadeIn 0.6s ease-out;
			}

			.animate-slide-up {
				animation: slideUp 0.6s ease-out;
			}
		</style>
	</body>
</html>
