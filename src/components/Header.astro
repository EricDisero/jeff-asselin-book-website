---
// Glassmorphism header that overlays on hero
---

<header class="header">
  <div class="header-container">
    <div class="logo-section">
      <img src="/site-assets/logo.png" alt="Logo" class="header-logo" />
      <div class="logo-text">The Rudimental Blueprint</div>
    </div>
    
    <nav class="nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/videos" class="nav-link">Videos</a>
      <a href="/tag-manager" class="nav-link">üè∑Ô∏è Tags</a>
      <button class="nav-button">
        <span>Community</span>
        <div class="button-bg"></div>
      </button>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 0;
    
    /* Glassmorphism effect */
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header-logo {
    height: 40px;
    width: auto;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffffff;
    background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
    position: relative;
    outline: none;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #ffffff 0%, #888888 100%);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #ffffff;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:focus {
    color: #ffffff;
    outline: none;
  }

  .nav-link:active {
    color: #ffffff;
    outline: none;
  }

  .nav-button {
    position: relative;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
    outline: none;
  }

  .nav-button span {
    position: relative;
    z-index: 2;
    transition: color 0.3s ease;
  }

  .button-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #333333 0%, #222222 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
    z-index: 1;
  }

  .nav-button:hover {
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .nav-button:hover .button-bg {
    transform: scaleX(1);
  }

  .nav-button:active {
    transform: translateY(0);
    outline: none;
  }

  .nav-button:focus {
    border-color: rgba(255, 255, 255, 0.3);
    outline: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1.5rem;
    }

    .logo-section {
      gap: 0.75rem;
    }

    .header-logo {
      height: 32px;
    }

    .logo-text {
      font-size: 1.2rem;
    }

    .nav {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .nav-button {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .logo-text {
      display: none;
    }
  }
</style> 