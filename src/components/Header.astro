---
// Glassmorphism header that overlays on hero
---

<header class="header">
  <div class="header-bg"></div>
  <div class="header-container">
    <div class="logo-section">
      <img src="/site-assets/logo.png" alt="Logo" class="header-logo" />
    </div>
    
    <nav class="nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/videos" class="nav-link">Videos</a>
      <button class="btn-primary">
        <span>Community</span>
      </button>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 0; /* Increased padding to accommodate larger logo */
  }

  .header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: -1;
  }

  .header-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 50px; /* Ensure container is tall enough for larger logo */
    z-index: 1;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0; /* Prevent logo section from shrinking */
  }

  .header-logo {
    height: 60px !important; /* Force larger size with !important */
    width: auto;
    max-width: none !important;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
    position: relative;
    outline: none;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #ffffff 0%, #888888 100%);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #ffffff;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:focus {
    color: #ffffff;
    outline: none;
  }

  .nav-link:active {
    color: #ffffff;
    outline: none;
  }

  /* Header button now uses global .btn-primary class */
  .header .btn-primary {
    padding: 12px 20px;
    font-size: 1rem;
    font-weight: 600;
  }



  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1.5rem;
    }

    .logo-section {
      gap: 0.75rem;
    }

    .header-logo {
      height: 80px;
    }

    .nav {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .nav-button {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .logo-text {
      display: none;
    }
  }
</style> 