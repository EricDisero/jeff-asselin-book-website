---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="The Rudimental Blueprint - Master Snare Drumming">
	<Header />
	<HeroSection />
	<div id="next-section" style="height: 100vh; background: #111; display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem;">
		More content sections coming soon...
	</div>
</Layout>

<style>
	@keyframes fade-in {
		from { opacity: 0; }
		to { opacity: 1; }
	}
	
	@keyframes slide-up {
		from { 
			opacity: 0; 
			transform: translateY(30px); 
		}
		to { 
			opacity: 1; 
			transform: translateY(0); 
		}
	}
	
	@keyframes float {
		0%, 100% { 
			transform: translateY(0px); 
		}
		50% { 
			transform: translateY(-10px); 
		}
	}
	
	.animate-fade-in {
		animation: fade-in 1s ease-out;
	}
	
	.animate-slide-up {
		animation: slide-up 1s ease-out forwards;
	}
	
	.animate-slide-up.delay-200 {
		animation-delay: 0.2s;
		opacity: 0;
	}
	
	.animate-slide-up.delay-400 {
		animation-delay: 0.4s;
		opacity: 0;
	}
	
	.animate-fade-in.delay-600 {
		animation-delay: 0.6s;
		opacity: 0;
	}
	
	.animate-float {
		animation: float 6s ease-in-out infinite;
	}
</style>
